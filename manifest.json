{
    "manifest_version": 3,
    "name": "LinkedIn Profile Enhancer",
    "version": "1.0",
    "description": "Injects a widget showing match score and account status.",
    "permissions": ["storage", "scripting"],
    "host_permissions": ["*://www.linkedin.com/*"],
    "content_scripts": [
      {
        "matches": ["*://www.linkedin.com/in/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ],
    "action": {
      "default_title": "LinkedIn Enhancer"
    }
  }
  